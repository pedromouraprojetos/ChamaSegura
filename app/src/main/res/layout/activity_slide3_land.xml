<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_linear"
        android:orientation="vertical"
        android:gravity="center"
        tools:layout_editor_absoluteX="121dp"
        tools:layout_editor_absoluteY="-79dp">

        <!-- Adicione aqui os elementos do seu layout -->
        <ImageView
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_marginTop="-10dp"
            android:layout_marginBottom="1dp"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Em caso de incÃªndio ou perda de"
            android:textColor="@android:color/black"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="controlo da queimada, por favor,"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="contacte as autoridades"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="45dp"/>

        <Button
            android:id="@+id/button1"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="-40dp"
            android:drawableEnd="@drawable/seta"
            android:drawablePadding="8dp"
            android:text="Entrar"
            android:textAlignment="textStart"
            android:textColor="@android:color/white"
            tools:ignore="RtlCompat" />


        <Button
            android:id="@+id/button2"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_background2"
            android:drawableEnd="@drawable/seta"
            android:drawablePadding="8dp"
            android:text="Registar"
            android:textAlignment="textStart"
            android:textColor="@android:color/white"
            tools:ignore="RtlCompat" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ball_white"
                android:layout_margin="20dp"/>

            <!-- Bola cinza 2 -->
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ball_white"
                android:layout_margin="20dp"/>

            <!-- Bola preta -->
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ball_black"
                android:layout_margin="20dp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
